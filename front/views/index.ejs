<!doctype html>
<html lang="en">

  <head>
    <title>iFttt</title>
    <script src="/javascripts/jquery-1.11.2.js"></script>
    <script src="javascripts/bootstrap.js"></script>
    <script src="/javascripts/client.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
  </head>

  <body>

    <!-- header -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">iFttt</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">

              <button type="button" id="login" class="btn btn-primary navbar-btn" id="login">ログイン</button>
              <fieldset id="signin_menu">
                <form method="post" id="signin" action="login">
                  <p><input id="l2id" name="l2id" type="text" class="form-control" placeholder="ID"/></p>
                  <p><input id="password" name="password" type="password" class="form-control" placeholder="Password"/></p>
                  <p class="remember">
                    <input id="remember" name="remember_me" value="1" tabindex="7" type="checkbox" />
                    <label for="remember">次回から入力を省略</label>
                  </p>
                  <button type="submit" class="btn btn-primary">ログイン</button>
                  <button type="button" class="btn btn-default" id="login_close">閉じる</button>
                </form>
              </fieldset>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div id="msg" name="msg"><br>

    

  </body>
</html>
